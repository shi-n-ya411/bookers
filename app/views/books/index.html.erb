<h1 class="toph"><strong>Books</strong></h1>

<table class="tditem">
  <thead>
    <tr>
      <th class="list1">Title</th>
      <th class="list2">body</th>
      <th colspan="3" class="list3"></th>
    </tr>
  </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td ><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure you want to delete?" } %></td>
        </tr>
      <% end %>
    </tbody>

</table>





<div class="nb"><h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></div>
<% end %>